
# Fix the MySQL grants at workers by applying:
#
# GRANT ALL PRIVILEGES ON dp1.* TO  'qsmaster'@127.0.0.1; FLUSH PRIVILEGES; EXIT;

ssh rubinqsv@sdfqserv001
cd /zfspool/management/qserv-slac/instance/slac15int
for host in $(cat config/workers); do
  echo $host;
  ssh $host "mysql -h127.0.0.1 -P3369 -uroot -p****** mysql -e 'GRANT ALL PRIVILEGES ON dp1.* TO  qsmaster@127.0.0.1; FLUSH PRIVILEGES'";
done

